<Window x:Class="InvoiceApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InvoiceApp"
        mc:Ignorable="d"
        Title="MainWindow"
        WindowState="Maximized"
        WindowStyle="SingleBorderWindow">
    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="8*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0" Background="#f0f0f0" Margin="10">
            <Button Content="Számla készítés" 
                Margin="5" 
                Padding="10.5"
                FontSize="16"
                FontWeight="Bold"/>

            <Button Content="Kontaktok" 
                Margin="5" 
                Padding="10.5"
                FontSize="16"
                FontWeight="Bold"/>

            <Button Content="Saját adatok" 
                Margin="5" 
                Padding="10.5"
                FontSize="16"
                FontWeight="Bold"/>
        </StackPanel>

    </Grid>
</Window>
